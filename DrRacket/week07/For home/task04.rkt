#lang racket
(define(shuffle xs)
  (define (helper count1 count2)
    (if(= count1 (quotient (length xs) 2))
       '()
       (cons (cons (list-ref xs count1) (list-ref xs count2)) (helper (add1 count1) (add1 count2)))
       )
    )
  (flatten (helper 0 (quotient (length xs) 2)))
  )
(equal? (shuffle '(2 5 1 3 4 7)) '(2 3 5 4 1 7))
(equal? (shuffle '(1 2 3 4 4 3 2 1)) '(1 4 2 3 3 2 4 1))
(equal? (shuffle '(1 1 2 2)) '(1 2 1 2))